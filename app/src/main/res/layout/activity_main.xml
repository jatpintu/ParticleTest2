<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/mainLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="MARKING ITUS"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        />
    <Button
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="START MONITORING"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/mainLabel"
        android:paddingBottom="10dp"
        />
    <TextView
        android:id="@+id/mohammadLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Amount of Mohammad"
        android:textSize="10dp"
        android:textStyle="bold"
        android:layout_below="@id/startButton"
        android:layout_marginTop="20dp"
        />
    <SeekBar
        android:id="@+id/seekBar"
        android:max="100"
        android:progress="50"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mohammadLabel"/>

    <TextView
        android:id="@+id/timeLabelMohammad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time slows down by:"
        android:layout_below="@id/seekBar"
        />
    <TextView
        android:id="@+id/scrollTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/seekBar"
        android:layout_toRightOf="@id/timeLabelMohammad"
        />


    <TextView
        android:id="@+id/timerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time"
        android:textSize="60dp"
        android:textStyle="bold"
        android:layout_centerInParent="true"
        />


</RelativeLayout>